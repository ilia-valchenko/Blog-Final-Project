@model MvcPL.Models.Post.EditPostViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<div>

    @using (Html.BeginForm("Edit", "Post", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <div class="form-group">
                @Html.LabelFor(m => Model.Title, new { @class = "control-label col-sm-3" })
                <div class="col-sm-5">
                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control required" })
                    @Html.ValidationMessageFor(model => model.Title)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => Model.Description, new { @class = "control-label col-sm-3" })
                <div class="col-sm-5">
                    @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Description)
                </div>
            </div>

            @Html.DropDownList("namesOfTags", (MultiSelectList)Model.TagList, new { multiple = "multiple" })
            @Html.ValidationMessageFor(m => m.SelectedTag)
            <!-- Google it-->

            <div class="form-group">
                <div class="col-sm-5 col-sm-offset-3">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>

        </div>
    }

</div>